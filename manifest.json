{
  "manifest_version": 2,

  "name": "Leonardo Chrome Extension",
  "description": "This is a chrome extension for LeonardoJS",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon-off.png"
  },

  "background": {
    "scripts": ["src/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"]
    }
  ],    
    
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}